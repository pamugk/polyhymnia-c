<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaPlayerBar" parent="GtkWidget">
    <child>
      <object class="GtkActionBar" id="root_action_bar">
        <child type="start">
          <object class="GtkImage">
            <property name="icon-name">image-missing-symbolic</property>
            <property name="pixel-size">50</property>
          </object>
        </child>
        <child type="start">
          <object class="GtkBox">
            <child>
              <object class="GtkLabel" id="current_track_title_label">
                <property name="ellipsize">end</property>
                <property name="single-line-mode">true</property>
                <property name="xalign">0</property>
                <style>
                  <class name="heading"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="current_track_artist_label">
                <property name="ellipsize">end</property>
                <property name="single-line-mode">true</property>
                <property name="xalign">0</property>
                <style>
                  <class name="caption"/>
                </style>
              </object>
            </child>
            <property name="orientation">vertical</property>
            <property name="valign">center</property>
          </object>
        </child>
        <child type="center">
          <object class="GtkGrid">
            <child>
              <object class="GtkScale">
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">3</property>
                  <property name="row">0</property>
                </layout>
                <property name="adjustment">
                  <object class="GtkAdjustment">
                    <property name="lower">0</property>
                    <property name="step-increment">5</property>
                    <property name="upper"
                      bind-source="player"
                      bind-property="total-seconds"
                      bind-flags="sync-create" />
                    <property name="value"
                      bind-source="player"
                      bind-property="elapsed-seconds"
                      bind-flags="sync-create" />
                  </object>
                </property>
                <property name="hexpand">true</property>
                <property name="orientation">horizontal</property>
                <property name="sensitive"
                  bind-source="player"
                  bind-property="active"
                  bind-flags="sync-create" />
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
                <property name="halign">end</property>
                <property name="icon-name">media-skip-backward-symbolic</property>
                <property name="sensitive"
                  bind-source="player"
                  bind-property="has-previous"
                  bind-flags="sync-create" />
	        <signal name="clicked"
	          handler="polyhymnia_player_bar_previous_button_clicked"
	          swapped="true" />
	      </object>
	    </child>
	    <child>
	      <object class="GtkButton" id="play_button">
	        <layout>
	          <property name="column">1</property>
	          <property name="row">1</property>
	        </layout>
	        <property name="halign">center</property>
	        <property name="sensitive"
	          bind-source="player"
	          bind-property="active"
	          bind-flags="sync-create" />
	        <signal name="clicked"
	          handler="polyhymnia_player_bar_play_button_clicked"
	          swapped="true" />
	      </object>
	    </child>
	    <child>
	      <object class="GtkButton">
	        <layout>
	          <property name="column">2</property>
	          <property name="row">1</property>
	        </layout>
	        <property name="halign">start</property>
	        <property name="icon-name">media-skip-forward-symbolic</property>
	        <property name="sensitive"
	          bind-source="player"
	          bind-property="has-next"
	          bind-flags="sync-create" />
	        <signal name="clicked"
	          handler="polyhymnia_player_bar_next_button_clicked"
	          swapped="true"/>
	      </object>
	    </child>
	    <property name="valign">center</property>
	  </object>
        </child>
        <child type="end">
          <object class="GtkToggleButton">
            <property name="has-tooltip">true</property>
            <property name="icon-name">subtitles-symbolic</property>
            <property name="sensitive">false</property>
            <property name="tooltip-text" translatable="yes">Lyrics</property>
            <property name="valign">center</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkToggleButton" id="queue_button">
            <property name="has-tooltip">true</property>
            <property name="icon-name">music-queue-symbolic</property>
            <property name="tooltip-text" translatable="yes">Queue</property>
            <property name="valign">center</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkScaleButton">
            <property name="adjustment">
              <object class="GtkAdjustment">
                <property name="lower">0</property>
                <property name="step-increment">5</property>
                <property name="upper">100</property>
                <property name="value"
                  bind-source="player"
                  bind-property="volume"
                  bind-flags="sync-create" />
              </object>
            </property>
            <property name="icons">audio-volume-high-symbolic</property>
            <property name="sensitive"
              bind-source="player"
              bind-property="audio-available"
              bind-flags="sync-create" />
            <property name="valign">center</property>
          </object>
        </child>
      </object>
    </child>
  </template>

  <object class="PolyhymniaPlayer" id="player">
    <signal name="notify::current-track"
      handler="polyhymnia_player_bar_current_track"
      swapped="true" />
    <signal name="notify::playback-status"
      handler="polyhymnia_player_bar_state"
      swapped="true" />
  </object>

</interface>