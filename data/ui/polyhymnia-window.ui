<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaWindow" parent="AdwApplicationWindow">
    <property name="height-request">640</property>
    <property name="width-request">480</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 550sp</condition>
        <setter object="header_bar" property="title-widget"/>
        <setter object="library_split_view" property="collapsed">true</setter>
        <setter object="artists_page" property="collapsed-view">true</setter>
        <setter object="switcher_bar" property="reveal">true</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwToolbarView">
        <property name="reveal-bottom-bars"
          bind-source="mpd_client"
          bind-property="initialized"
          bind-flags="sync-create" />
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <child type="start">
              <object class="AdwSplitButton">
                <property name="action-target">"library"</property>
                <property name="icon-name">update-symbolic</property>
                <property name="menu-model">scan_menu</property>
                <property name="visible"
                  bind-source="mpd_client"
                  bind-property="initialized"
                  bind-flags="sync-create" />
                <signal name="clicked"
                  handler="polyhymnia_window_scan_button_clicked"
                  swapped="true" />
              </object>
            </child>
            <property name="title-widget">
              <object class="AdwViewSwitcher">
                <property name="stack">content_stack</property>
                <property name="policy">wide</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="search_button">
                <property name="has-tooltip">true</property>
                <property name="icon-name">edit-find-symbolic</property>
                <property name="sensitive"
                  bind-source="mpd_client"
                  bind-property="initialized"
                  bind-flags="sync-create" />
                <property name="tooltip-text" translatable="yes">Search</property>
              </object>
            </child>
            <property name="show-title"
              bind-source="mpd_client"
              bind-property="initialized"
              bind-flags="sync-create" />
          </object>
        </child>
        <child type="top">
          <object class="GtkSearchBar">
            <child>
	      <object class="GtkSearchEntry">
                <property name="placeholder-text" translatable="yes">Searchâ€¦</property>
	      </object>
            </child>
            <property name="search-mode-enabled"
            	bind-source="search_button"
            	bind-property="active"
            	bind-flags="sync-create" />
          </object>
        </child>
        <property name="content">
          <object class="AdwToastOverlay" id="root_toast_overlay" />
        </property>
        <child type="bottom">
          <object class="PolyhymniaPlayerBar" id="player_bar">
            <style>
              <class name="toolbar"/>
            </style>
          </object>
        </child>
        <child type="bottom">
          <object class="AdwViewSwitcherBar" id="switcher_bar">
            <property name="stack">content_stack</property>
          </object>
        </child>
      </object>
    </property>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Polyhymnia</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>

  <menu id="scan_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Scan</attribute>
        <attribute name="action">app.scan</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Full Scan</attribute>
        <attribute name="action">app.rescan</attribute>
      </item>
    </section>
  </menu>

  <object class="AdwOverlaySplitView" id="content">
    <child type="content">
      <object class="AdwViewStack" id="content_stack">
        <child>
          <object class="AdwViewStackPage">
            <property name="icon-name">library-music-symbolic</property>
            <property name="name">library_page</property>
            <property name="title" translatable="yes">Library</property>
            <property name="child">
              <object class="AdwOverlaySplitView" id="library_split_view">
                <child type="sidebar">
                  <object class="GtkStackSidebar">
                    <property name="stack">library_stack</property>
                  </object>
                </child>
                <child type="content">
                  <object class="GtkStack" id="library_stack">
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="AdwNavigationView" id="artist_navigation_view">
                            <child>
                              <object class="PolyhymniaArtistsPage" id="artists_page">
                                <signal name="navigate"
                                  handler="polyhymnia_window_navigate_artist"
                                  swapped="true" />
                              </object>
                            </child>
                          </object>
                        </property>
                        <property name="name">artists_page</property>
                        <property name="title" translatable="yes">Artists</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="AdwBin" id="album_stack_page_content" />
                        </property>
                        <property name="name">albums_page</property>
                        <property name="title" translatable="yes">Albums</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="AdwNavigationView">
                            <child>
                              <object class="PolyhymniaTracksPage" />
                            </child>
                          </object>
                        </property>
                        <property name="name">songs_page</property>
                        <property name="title" translatable="yes">Songs</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="AdwBin" id="playlist_stack_page_content" />
                        </property>
                        <property name="name">playlists_page</property>
                        <property name="title" translatable="yes">Playlists</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="AdwBin" id="genre_stack_page_content" />
                        </property>
                        <property name="name">genres_page</property>
                        <property name="title" translatable="yes">Genres</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwViewStackPage">
            <property name="icon-name">audio-radio-symbolic</property>
            <property name="name">radio_page</property>
            <property name="title" translatable="yes">Radio</property>
            <property name="child">
              <object class="AdwStatusPage">
                <property name="description" translatable="yes">Check your Internet connection and try again</property>
                <property name="icon-name">offline-globe-symbolic</property>
                <property name="title" translatable="yes">No Internet connection</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child type="sidebar">
      <object class="PolyhymniaQueuePane" />
    </child>
    <property name="collapsed">true</property>
    <property name="max-sidebar-width">300</property>
    <property name="sidebar-position">end</property>
  </object>

  <object class="AdwNavigationView" id="album_navigation_view">
    <child>
      <object class="AdwNavigationPage">
        <property name="child">
          <object class="GtkScrolledWindow">
            <property name="child">
              <object class="GtkGridView">
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-album-grid-item.ui</property>
                  </object>
                </property>
                <property name="model">
                  <object class="GtkNoSelection" id="album_selection_model" />
                </property>
                <property name="single-click-activate">true</property>
                <signal name="activate"
                  handler="polyhymnia_window_album_clicked"
                  swapped="true" />
              </object>
            </property>
          </object>
        </property>
        <property name="title" translatable="yes">Albums</property>
      </object>
    </child>
  </object>
  <object class="AdwNavigationView" id="genre_navigation_view">
    <child>
      <object class="AdwNavigationPage">
        <property name="child">
          <object class="GtkScrolledWindow">
            <property name="child">
              <object class="GtkGridView">
                <property name="factory">
                  <object class="GtkBuilderListItemFactory" id="genre_factory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-genre-grid-item.ui</property>
                  </object>
                </property>
                <property name="model">
                  <object class="GtkNoSelection" id="genre_selection_model">
                    <property name="model">
                      <object class="GtkStringList" id="genre_model" />
                    </property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
        <property name="title" translatable="yes">Genres</property>
      </object>
    </child>
  </object>
  <object class="AdwNavigationView" id="playlist_navigation_view">
    <child>
      <object class="AdwNavigationPage">
        <property name="child">
          <object class="GtkScrolledWindow">
            <property name="child">
              <object class="GtkGridView">
                <property name="factory">
                  <object class="GtkBuilderListItemFactory" id="playlist_factory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-genre-grid-item.ui</property>
                  </object>
                </property>
                <property name="model">
                  <object class="GtkNoSelection" id="playlist_selection_model">
                    <property name="model">
                      <object class="GtkStringList" id="playlist_model" />
                    </property>
                  </object>
                </property>
                <property name="single-click-activate">true</property>
                <signal name="activate"
                  handler="polyhymnia_window_playlist_clicked"
                  swapped="true" />
              </object>
            </property>
          </object>
        </property>
        <property name="tag">playlist-list</property>
        <property name="title" translatable="yes">Playlists</property>
      </object>
    </child>
  </object>

  <object class="AdwStatusPage" id="albums_status_page" />
  <object class="AdwStatusPage" id="genres_status_page" />
  <object class="AdwStatusPage" id="playlists_status_page" />

  <object class="AdwStatusPage" id="no_mpd_connection_page">
    <property name="description" translatable="yes">Check your MPD setup and try again</property>
    <property name="icon-name">offline-globe-symbolic</property>
    <property name="title" translatable="yes">No MPD connection</property>
    <property name="child">
      <object class="GtkButton">
        <property name="action-name">app.reconnect</property>
        <property name="halign">center</property>
        <property name="label" translatable="yes">Try again</property>
      </object>
    </property>
  </object>

  <object class="PolyhymniaMpdClient" id="mpd_client">
    <signal name="database-updated"
      handler="polyhymnia_window_mpd_database_updated"
      swapped="true" />
    <signal name="notify::initialized"
      handler="polyhymnia_window_mpd_client_initialized"
      swapped="true" />
    <signal name="stored-playlist-modified"
      handler="polyhymnia_window_mpd_playlists_changed"
      swapped="true" />
  </object>

  <object class="GSettings" id="settings">
    <property name="schema-id">com.github.pamugk.polyhymnia</property>
  </object>
</interface>