<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaTrackDetailsWindow" parent="AdwWindow">
    <property name="content">
      <object class="AdwNavigationView" id="root_navigation_view">
        <child>
          <object class="AdwNavigationPage">
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar" />
                </child>
                <property name="content">
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="AdwClamp">
                        <property name="child">
                          <object class="GtkBox">
			    <child>
			      <object class="GtkImage" id="album_cover_image">
			        <property name="icon-name">cd-symbolic</property>
			        <property name="pixel-size">128</property>
			      </object>
			    </child>
			    <child>
			      <object class="GtkLabel" id="track_title_label">
				<style>
				  <class name="title-1"/>
				</style>
			      </object>
			    </child>
			    <child>
			      <object class="GtkLabel" id="album_title_label" />
			    </child>
			    <child>
			      <object class="GtkLabel" id="album_artist_label" />
			    </child>
			    <child>
			      <object class="GtkBox">
			        <child>
			          <object class="AdwPreferencesGroup">
			            <child>
			              <object class="AdwActionRow">
			                <child type="suffix">
			                  <object class="GtkImage">
			                    <property name="icon-name">right-symbolic</property>
			                  </object>
			                </child>
			                <property name="title" translatable="yes">Details</property>
			              </object>
			            </child>
			          </object>
			        </child>
			        <child>
			          <object class="AdwPreferencesGroup">
			            <child>
			              <object class="AdwActionRow">
			                <child type="suffix">
			                  <object class="GtkImage">
			                    <property name="icon-name">right-symbolic</property>
			                  </object>
			                </child>
			                <property name="title" translatable="yes">Participants</property>
			              </object>
			            </child>
			            <child>
			              <object class="AdwActionRow">
			                <child type="suffix">
			                  <object class="GtkImage">
			                    <property name="icon-name">right-symbolic</property>
			                  </object>
			                </child>
			                <property name="title" translatable="yes">Legal</property>
			              </object>
			            </child>
			          </object>
			        </child>
			        <property name="spacing">24</property>
			        <property name="orientation">vertical</property>
			      </object>
			    </child>
        		    <property name="orientation">vertical</property>
        		    <property name="spacing">8</property>
                          </object>
                        </property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-end">16</property>
                        <property name="margin-start">16</property>
                        <property name="margin-top">12</property>
                        <property name="maximum-size">600</property>
                      </object>
                    </property>
                    <property name="hscrollbar-policy">never</property>
                    <property name="propagate-natural-width">True</property>
                    <property name="propagate-natural-height">True</property>
                    <property name="max-content-height">600</property>
                  </object>
                </property>
              </object>
            </property>
            <property name="name">main_page</property>
            <property name="title" translatable="yes">Track Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">details_page</property>
            <property name="title" translatable="yes">Track Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">tech_details_page</property>
            <property name="title" translatable="yes">Tech Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">participants_page</property>
            <property name="title" translatable="yes">Participants</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">legal_page</property>
            <property name="title" translatable="yes">Legal</property>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">588</property>
    <property name="default-width">360</property>
    <property name="height-request">320</property>
    <property name="title" translatable="yes">Statistics</property>
    <property name="width-request">300</property>
  </template>

  <object class="PolyhymniaMpdClient" id="mpd_client">
    <signal name="database-updated"
      handler="polyhymnia_track_details_window_mpd_database_updated"
      swapped="true" />
    <signal name="notify::initialized"
      handler="polyhymnia_track_details_window_mpd_client_initialized"
      swapped="true" />
  </object>
</interface>