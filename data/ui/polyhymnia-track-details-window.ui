<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaTrackDetailsWindow" parent="AdwWindow">
    <property name="content">
      <object class="AdwNavigationView" id="root_navigation_view">
        <child>
          <object class="AdwNavigationPage">
            <property name="child>
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar" />
                </child>
                <property name="content">
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="AdwClamp">
                        <property name="child">
                          <object class="GtkBox">
                          </object>
                        </property>
                        <property name="maximum-size">600</property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </property>
            <property name="name">main_page</property>
            <property name="title" translatable="yes">Track Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">details_page</property>
            <property name="title" translatable="yes">Track Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">tech_details_page</property>
            <property name="title" translatable="yes">Tech Details</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">participants_page</property>
            <property name="title" translatable="yes">Participants</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="name">legal_page</property>
            <property name="title" translatable="yes">Legal</property>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">320</property>
    <property name="default-width">360</property>
    <property name="height-request">320</property>
    <property name="title" translatable="yes">Statistics</property>
    <property name="width-request">300</property>
  </template>

  <object class="PolyhymniaMpdClient" id="mpd_client">
    <signal name="database-updated"
      handler="polyhymnia_statistics_window_mpd_database_updated"
      swapped="true" />
    <signal name="notify::initialized"
      handler="polyhymnia_statistics_window_mpd_client_initialized"
      swapped="true" />
  </object>
</interface>