<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PolyhymniaAlbumCard" parent="GtkWidget">
    <child>
      <object class="GtkBox" id="container">
        <property name="orientation">vertical</property>
        <property name="spacing">4</property>
        <child>
          <object class="GtkImage" id="cover_image">
            <property name="icon-name">cd-symbolic</property>
            <property name="pixel-size">100</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="album_label">
            <style>
              <class name="heading"/>
            </style>
            <property name="ellipsize">end</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="artist_label">
            <style>
              <class name="caption-heading"/>
            </style>
            <property name="ellipsize">end</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="date_label">
            <style>
              <class name="caption"/>
            </style>
            <property name="ellipsize">end</property>
            <property name="xalign">0</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>