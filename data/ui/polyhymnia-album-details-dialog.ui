<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaAlbumDetailsDialog" parent="AdwDialog">
    <property name="child">
      <object class="AdwToolbarView" id="root_toolbar_view">
        <child type="top">
          <object class="AdwHeaderBar" />
        </child>
        <property name="content">
          <object class="GtkScrolledWindow" id="main_scrolled_window">
            <property name="hscrollbar-policy">never</property>
            <property name="propagate-natural-width">True</property>
            <property name="propagate-natural-height">True</property>
            <property name="max-content-height">600</property>
          </object>
        </property>
        <child type="bottom">
          <object class="AdwBin">
            <property name="child">
              <object class="GtkLabel">
                <property name="label" translatable="yes">Powered by &lt;a href="https://www.last.fm"&gt;Last.fm&lt;/a&gt;</property>
                <property name="use-markup">true</property>
                <property name="xalign">0</property>
              </object>
            </property>
            <property name="css-classes">toolbar</property>
          </object>
        </child>
        <property name="reveal-bottom-bars">false</property>
      </object>
    </property>
    <property name="content-height">588</property>
    <property name="content-width">360</property>
    <property name="height-request">320</property>
    <property name="title" translatable="yes">Additional Info</property>
    <property name="width-request">300</property>
  </template>

  <object class="AdwClamp" id="main_content">
    <property name="child">
      <object class="GtkLabel" id="additional_info_label">
        <property name="use-markup">true</property>
        <property name="wrap">true</property>
        <property name="xalign">0</property>
        <property name="yalign">0</property>
      </object>
    </property>
    <property name="margin-bottom">12</property>
    <property name="margin-end">16</property>
    <property name="margin-start">16</property>
    <property name="margin-top">12</property>
    <property name="maximum-size">600</property>
  </object>
  <object class="AdwStatusPage" id="status_page" />
  <object class="GtkSpinner" id="spinner">
    <property name="halign">center</property>
    <property name="height-request">64</property>
    <property name="valign">center</property>
    <property name="width-request">64</property>
  </object>

  <object class="PolyhymniaAdditionalInfoProvider" id="additional_info_provider" />
  <object class="GCancellable" id="additional_info_cancellable" />
</interface>