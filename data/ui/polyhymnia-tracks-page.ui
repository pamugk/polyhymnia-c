<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PolyhymniaTracksPage" parent="AdwNavigationPage">
    <property name="tag">tracks-list</property>
    <property name="title" translatable="yes">Songs</property>
  </template>

  <object class="AdwToolbarView" id="track_toolbar_view">
    <property name="content">
      <object class="GtkScrolledWindow">
        <property name="child">
          <object class="GtkColumnView">
            <child>
              <object class="GtkColumnViewColumn">
                <property name="expand">true</property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-track-title-column.ui</property>
                  </object>
                </property>
                <property name="resizable">false</property>
                <property name="title" translatable="yes">Title</property>
              </object>
            </child>
            <child>
              <object class="GtkColumnViewColumn">
                <property name="expand">true</property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-track-artist-column.ui</property>
                  </object>
                </property>
                <property name="resizable">false</property>
                <property name="title" translatable="yes">Artist</property>
              </object>
            </child>
            <child>
              <object class="GtkColumnViewColumn">
                <property name="expand">true</property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-track-album-column.ui</property>
                  </object>
                </property>
                <property name="resizable">false</property>
                <property name="title" translatable="yes">Album</property>
              </object>
            </child>
            <child>
              <object class="GtkColumnViewColumn">
                <property name="expand">false</property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/pamugk/polyhymnia/ui/polyhymnia-track-duration-column.ui</property>
                  </object>
                </property>
                <property name="resizable">false</property>
                <property name="title" translatable="yes">Duration</property>
              </object>
            </child>
            <property name="model">
              <object class="GtkMultiSelection" id="tracks_selection_model">
                <signal name="selection-changed"
                  handler="polyhymnia_tracks_page_selection_changed"
                  swapped="true" />
              </object>
            </property>
            <property name="show-column-separators">true</property>
            <property name="show-row-separators">true</property>
            <signal name="activate"
              handler="polyhymnia_tracks_page_track_activated"
              swapped="true" />
          </object>
        </property>
      </object>
    </property>
    <child type="bottom">
      <object class="GtkActionBar">
        <child type="start">
          <object class="GtkButton">
            <property name="icon-name">play-large-symbolic</property>
            <signal name="clicked"
              handler="polyhymnia_tracks_page_play_tracks_button_clicked"
              swapped="true" />
	  </object>
        </child>
        <child type="start">
          <object class="GtkButton">
            <property name="icon-name">plus-symbolic</property>
            <signal name="clicked"
              handler="polyhymnia_tracks_page_add_tracks_to_queue_button_clicked"
              swapped="true" />
	  </object>
        </child>
        <child type="end">
          <object class="GtkButton">
            <property name="icon-name">edit-select-none-symbolic</property>
            <signal name="clicked"
              handler="polyhymnia_tracks_page_clear_selection_button_clicked"
              swapped="true" />
	  </object>
        </child>
      </object>
    </child>
    <property name="reveal-bottom-bars">false</property>
  </object>
  <object class="AdwStatusPage" id="tracks_status_page" />

  <object class="PolyhymniaMpdClient" id="mpd_client">
    <signal name="database-updated"
      handler="polyhymnia_tracks_page_mpd_database_updated"
      swapped="true" />
    <signal name="notify::initialized"
      handler="polyhymnia_tracks_page_mpd_client_initialized"
      swapped="true" />
  </object>
</interface>