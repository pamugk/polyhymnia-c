<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PolyhymniaPreferencesWindow" parent="AdwPreferencesWindow">
    <child>
      <object class="AdwPreferencesPage">
        <property name="icon-name">preferences-system-symbolic</property>
        <property name="name">system_page</property>
        <property name="title" translatable="yes">System</property>
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow">
                <child type="suffix">
                  <object class="GtkSwitch" id="resume_playback_switch">
                    <property name="valign">center</property>
                  </object>
                </child>
                <property name="activatable-widget">resume_playback_switch</property>
                <property name="subtitle" translatable="yes">Resume media playback on application startup</property>
                <property name="title" translatable="yes">Resume on Startup</property>
              </object>
            </child>
            <child>
              <object class="AdwComboRow">
                <property name="subtitle" translatable="yes">Page opened on application startup</property>
                <property name="title" translatable="yes">Start Page</property>
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item translatable="yes">Library</item>
                      <item translatable="yes">Radio</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
            <property name="description" translatable="yes">Common application settings</property>
            <property name="title" translatable="yes">Common</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage">
        <property name="icon-name">library-music-symbolic</property>
        <property name="name">library_page</property>
        <property name="title" translatable="yes">Library</property>
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwExpanderRow">
                <property name="subtitle" translatable="yes">Album information that can be found in external sources</property>
                <property name="title" translatable="yes">Albums</property>
              </object>
            </child>
            <child>
              <object class="AdwExpanderRow">
                <property name="subtitle" translatable="yes">Artist information that can be found in external sources</property>
                <property name="title" translatable="yes">Artists</property>
              </object>
            </child>
            <child>
              <object class="AdwExpanderRow">
                <property name="subtitle" translatable="yes">Song information that can be found in external sources</property>
                <property name="title" translatable="yes">Songs</property>
              </object>
            </child>
            <property name="description" translatable="yes">Additional information that can be found on music from your library</property>
            <property name="title" translatable="yes">Additional Information</property>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow">
                <child type="suffix">
                  <object class="GtkSwitch" id="play_explicit_switch">
                    <property name="valign">center</property>
                  </object>
                </child>
                <property name="activatable-widget">play_explicit_switch</property>
                <property name="title" translatable="yes">Play Explicit Songs</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <child type="suffix">
                  <object class="GtkSwitch" id="show_explicit_switch">
                    <property name="valign">center</property>
                  </object>
                </child>
                <property name="activatable-widget">show_explicit_switch</property>
                <property name="title" translatable="yes">Show Explicit Album Covers</property>
              </object>
            </child>
            <property name="description" translatable="yes">The ways to control undesirable content</property>
            <property name="title" translatable="yes">Explicit Content</property>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow">
                <child type="suffix">
                  <object class="GtkSwitch" id="scan_startup_switch">
                    <property name="valign">center</property>
                  </object>
                </child>
                <property name="activatable-widget">scan_startup_switch</property>
                <property name="subtitle" translatable="yes">Scan sources for new songs on application startup</property>
                <property name="title" translatable="yes">Scan on Startup</property>
              </object>
            </child>
            <child>
              <object class="AdwComboRow">
                <property name="subtitle" translatable="yes">The way to search for new songs</property>
                <property name="title" translatable="yes">Scanning algorithm</property>
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item>Magic</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwExpanderRow" id="scan_sources_expander_row">
                <child type="action">
                  <object class="GtkButton" id="scan_sources_add_button">
                    <property name="icon-name">list-add-symbolic</property>
                    <property name="valign">center</property>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
                <property name="subtitle" translatable="yes">Places where your music is stored</property>
                <property name="title" translatable="yes">Sources</property>
              </object>
            </child>
            <property name="description" translatable="yes">Library update configuration</property>
            <property name="title" translatable="yes">Scan</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage">
        <property name="icon-name">audio-radio-symbolic</property>
        <property name="name">radio_page</property>
        <property name="title" translatable="yes">Radio</property>
      </object>
    </child>
    <property name="destroy-with-parent">True</property>
    <property name="icon-name">gtk-preferences</property>
    <property name="modal">True</property>
  </template>
</interface>