<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="polyhymnia">
	<schema id="com.github.pamugk.polyhymnia" path="/com/github/pamugk/polyhymnia/">
	  <!-- Application preferences -->
	  <key name="app-external-data-lyrics-genius" type="b">
	    <default>true</default>
	  </key>
	  <key name="app-library-scan-startup" type="b">
      <default>false</default>
    </key>
	  <key name="app-system-resume-playback" type="b">
      <default>false</default>
    </key>

	  <!-- Main window state-->
	  <key name="window-fullscreened" type="b">
      <default>false</default>
    </key>
	  <key name="window-height" type="i">
      <default>600</default>
    </key>
	  <key name="window-maximized" type="b">
      <default>true</default>
    </key>
	  <key name="window-width" type="i">
      <default>800</default>
    </key>
	</schema>
</schemalist>
